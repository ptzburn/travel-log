{
  "nodeModulesDir": "auto",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "concurrently \"deno task dev:app\" \"deno task dev:db\"",
    "dev:app": "deno run --allow-read --allow-env --allow-ffi --allow-write --allow-sys --allow-net --allow-run --env-file vite",
    "dev:db": "turso dev --db-file local.db",
    "build": "vite build",
    "db:generate:migration": "deno -A npm:drizzle-kit generate",
    "db:migrate": "deno -A npm:drizzle-kit migrate",
    "db:studio": "deno -A npm:drizzle-kit studio",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "deploy": "deployctl deploy --project=ptzburn-travel-log --entrypoint=./_fresh/server.js",
    "preview": "deno run -A main.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "@libsql/client": "npm:@libsql/client@^0.15.15",
    "@preact-icons/tb": "jsr:@preact-icons/tb@^1.0.14",
    "better-auth": "npm:better-auth@^1.3.11",
    "concurrently": "npm:concurrently@^9.2.1",
    "daisyui": "npm:daisyui@^5.1.12",
    "drizzle-kit": "npm:drizzle-kit@^0.31.4",
    "drizzle-orm": "npm:drizzle-orm@^0.44.5",
    "fresh": "jsr:@fresh/core@^2.1.0",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.1",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.3",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "zod": "npm:zod@^4.1.9"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
